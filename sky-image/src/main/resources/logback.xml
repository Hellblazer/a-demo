<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Stop output INFO at start -->
    <!--    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>-->
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d{mm:ss.SSS} %logger{0} - %msg%n</Pattern>
        </encoder>
    </appender>

    <logger name="org.jooq.Constants" level="warn" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="org.jooq" level="warn" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="io.netty.util" level="warn" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="liquibase" level="warn" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <root level="trace">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
